from keras import backend as K

# dimensions of our images.
img_width, img_height = 3, 3

train_data_dir = '/Users/chayan/Desktop/Project/Images/Trees/Train'


import numpy as np
import csv
import os
from keras.preprocessing.image import load_img
from keras.preprocessing.image import img_to_array


def getArray():
     test_data_dir = '/Users/chayan/Desktop/Project/Images/Trees/Test'
     with open("prediction_Trees.csv", "w") as f:
        p_writer = csv.writer(f, delimiter=',', lineterminator='\n')
        for _, _, imgs in os.walk(test_data_dir):
            for im in imgs:
                if im == ".DS_Store":
                    continue
                pic_id = im.split(".")[0]
                imgPath = os.path.join(test_data_dir + "/trees",im)
                img = load_img(imgPath, target_size=(img_width, img_width))
                test_x = img_to_array(img).reshape(1, img_width, img_height,3)
                print (test_x)
image_array=getArray()
